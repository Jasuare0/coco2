<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- <title>E-mprender</title> -->
    
    <%- include('./partials/title') %>


    
    <!-- ESTILOS BOOSTRAP -->

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">

    <!-- ESTILOS PERSONALES -->

    <link rel='stylesheet' href='/stylesheets/index.css' />
    <link rel='stylesheet' href='/stylesheets/navbar.css' />

    <link rel='stylesheet' href='/stylesheets/adminBlog.css' />

</head>
<body>
    

    <!-- INICIO BARRA DE NAVEGACIÓN -->

    <%- include('./partials/navbar') %>

    <!-- FIN BARRA DE NAVEGACIÓN -->


    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Inicio</a></li>
        <li class="breadcrumb-item"><a href="/admin">Admin</a></li>
        <li class="breadcrumb-item active" aria-current="page">Blog</li>
      </ol>
    </nav>


    <div class="external-container-section">

      <div class="internal-container-section">    
        <button type="button" class="btn btn-primary btn-lg btn-block"><a href="/admin/blogs/crear/nuevo" class="linkCrearBlog"><i class="fas fa-plus"></i> Crear un nuevo Blog</a></button>
      </div>
    </div>

    <div class="external-container-section">

      <div class="internal-container-section">
        <table class="table table-hover">
          <thead>
            <tr>
              <th scope="col" class="thnumeral">#</th>
              <th scope="col" class="thimagen">Imagen</th>
              <th scope="col" class="thtitulo">Título</th>
              <th scope="col" class="thvisualizaciones">Visualizaciones</th>
              <th scope="col" class="thmeGusta">Me Gusta</th>
              <th scope="col" class="tharchivo">Archivo</th>
              <th scope="col" class="theditar">Editar</th>
              <th scope="col" class="theliminar">Eliminar</th>
            </tr>

          </thead>
          <tbody>
            <% for(let i=0; i<blogs.length; i++) {%>
            <tr>
              <th scope="row"><%= blogs[i].id %></th>
              <td><img src="../images/blogs/<%= blogs[i].imagen %>" alt="" class="imagenBlog img-thumbnail"></td>
              <td><%= blogs[i].titulo %></td>
              <td><%= blogs[i].visualizaciones %></td>
              <td><%= blogs[i].megusta %></td>
              <td><%= blogs[i].imagen %></td>
              <td><button type="button" class="btn btn-primary"><a href="/admin/blogs/<%= blogs[i].id %>" class="link">Editar</a></button></td>
              <td><button type="button" class="btn btn-danger"><a href="/admin/blogs/eliminar/<%= blogs[i].id %>" class="link">Eliminar</a></button></td>
              <% } %>
            </tr>
            <tr>

          </tbody>
        </table>
    
    
      </div>

    </div>





</body>


