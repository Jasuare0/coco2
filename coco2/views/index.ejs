<!-- INICIO PRODUCTOS -->
<!-- //////////////// -->

    <% if(productos.length != 0) {%>
      <div class="external-container-section">

        <div class="internal-container-section">
          <h2 class="header-section">PRODUCTOS</h2>
        </div>
  
      </div>
  
  
      <div class="external-container-section">
  
        <div class="internal-container-section">
          <div class="external-container-imagenes">
  
            <% for(let i=0; i<productos.length; i++) {%>
              <div class="internal-container-imagenes">
                <% if(productos[i].imagenesProductos != '') { %>
                  <img src="/images/productos/<%= productos[i].imagenesProductos[0].imagen %>" alt="" class="imagen-productos">
  
                <% } %>
                <h2 class="tituloNombreProducto"><%= productos[i].nombre %></h2>
                <p class="paragraph-productos">
                  <%= productos[i].descripcion %>
                </p>
  
  

                <% if(productos[i].precio != '') {  %>
                  <p class="paragraph-productos">
                    <% if(productos[i].preciocondescuento != ''){%>
                    
                      <b>Precio: $ <del><%= productos[i].precio %></del></b>
                    
                    <% }else{ %>
                      <b>Promoción: <%= productos[i].precio %></b>

                    <% } %>

                  </p>
                <% }else{  %>
                  <!-- <p class="paragraph-productos">
                    <br>
                  </p> -->
                <% } %>


                <% if(productos[i].precio != '') {  %>
                  <p class="paragraph-productos">
                    <% if(productos[i].preciocondescuento != ''){%>
                    
                      <b>Promoción: $ <%= productos[i].preciocondescuento %></b>
                    
                    <% }else{ %>
                      <b>Promoción: N/A</b>

                    <% } %>

                  </p>
                <% }else{  %>
                  <!-- <p class="paragraph-productos">
                    <br>
                  </p> -->
                <% } %>
  
                <a href="/productos/<%= productos[i].id %>" class="verMas">Ver mas ...</a>
              </div>
    
            <% } %>
  
  
          </div>
  
        </div>
  
      </div>
  
      
    <% } %>

<!-- FIN PRODUCTOS -->
<!-- //////////////// -->


