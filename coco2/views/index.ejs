    <div class="external-container-section">

      <div class="internal-container-section">
        <h2 class="header-slogan"><%= resultados[0].value %></h2>
      </div>

    </div>

    <div class="external-container-section">
      <div class="internal-container-section">
        <h2 class="header-section">CONÓCENOS</h2>
        <p class="paragraph-conocenos"><%= resultados[1].value %></p>
