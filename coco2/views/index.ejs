                      <b>Precio: $ <del><%= servicios[i].precio %></del></b>
                    
                    <% }else{ %>
                      <b>Promoción: <%= servicios[i].precio %></b>

                    <% } %>

                  </p>
                <% }else{  %>
                  <!-- <p class="paragraph-productos">
                    <br>
                  </p> -->
                <% } %>


                <% if(servicios[i].precio != '') {  %>
                  <p class="paragraph-productos">
                    <% if(servicios[i].preciocondescuento != ''){%>
                    
                      <b>Promoción: $ <%= servicios[i].preciocondescuento %></b>
                    
                    <% }else{ %>
                      <b>Promoción: N/A</b>

                    <% } %>

                  </p>
                <% }else{  %>
                  <!-- <p class="paragraph-productos">
                    <br>
                  </p> -->
                <% } %>
  
                <a href="/productos/<%= servicios[i].id %>" class="verMas">Ver mas ...</a>
              </div>
  
            <% } %>
  
  
          </div>
  
        </div>
  
      </div>
      

    <% } %>


<!-- FIN PRODUCTOS -->
