<body style="background-color: rgba(<%= resultados[14].value %>,<%= resultados[15].value %>,<%= resultados[16].value %>, <%= resultados[17].value %>);<%= fuentes[0].css %>">
    
    
    <!-- INICIO BARRA DE NAVEGACIÓN -->

    <%- include('./partials/navbar') %>

    <!-- FIN BARRA DE NAVEGACIÓN -->




    <div class="external-container-section">

      <div class="internal-container-section">
        <h2 class="header-slogan">PORTAFOLIO DE PRODUCTOS</h2>
      </div>

    </div>


    <div class="external-container-section">

      <div class="internal-container-section">

        <% for(let i=0; i<productosBusqueda.length; i++) {%>
          <div class="external-container-productos">
            <div class="internal-container-productos">
              <% if(productosBusqueda[i].imagenesProductos != ''){%>
                <img src="../images/productos/<%= productosBusqueda[i].imagenesProductos[0].imagen %>" alt="" class="imagen-producto">
              
              <% }else{ %>
                <img src="" alt="" class="imagen-producto">
              
              <% } %>
            </div>
            <div class="internal-container-paragraph-productos">
              <h2 class="titulo-producto"><%= productosBusqueda[i].nombre %></h2>
              <p class="paragraph-producto"><%= productosBusqueda[i].descripcion %></p>


              <% if(productosBusqueda[i].precio != '') {  %>
                <p class="paragraph-productos">
                  <% if(productosBusqueda[i].preciocondescuento != ''){%>
                  
                    <b>Precio: $ <del><%= productosBusqueda[i].precio %></del></b>
                  
                  <% }else{ %>
                    <b>Promoción: <%= productosBusqueda[i].precio %></b>

                  <% } %>

                </p>
              <% }else{  %>
                <!-- <p class="paragraph-productos">
                  <br>
                </p> -->
              <% } %>


              <% if(productosBusqueda[i].precio != '') {  %>
                <p class="paragraph-productos">
                  <% if(productosBusqueda[i].preciocondescuento != ''){%>
                  
                    <b>Promoción: $ <%= productosBusqueda[i].preciocondescuento %></b>
                  
                  <% }else{ %>
                    <b>Promoción: N/A</b>

                  <% } %>

                </p>
              <% }else{  %>
                <!-- <p class="paragraph-productos">
                  <br>
                </p> -->
              <% } %>
              
              <a href="/productos/<%= productosBusqueda[i].id %>">Ver más...</a>
            </div>
          </div>
  
        <% } %>

      </div>

    </div>






    <!-- INICIO FOOTER -->

    <%- include('./partials/footer') %>

    <!-- FIN FOOTER -->


</body>


