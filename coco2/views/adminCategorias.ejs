    <!-- FIN BARRA DE NAVEGACIÃ“N -->


    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Inicio</a></li>
        <li class="breadcrumb-item"><a href="/admin">Admin</a></li>
        <li class="breadcrumb-item active" aria-current="page">Categorias</li>
      </ol>
    </nav>


    <div class="external-container-section contenedortabla">

      <div class="internal-container-section">

        <button type="button" class="btn btn-primary"><a href="/admin/categorias/crear" class="linkEditar"> + Agregar Categoria</a></button>
        <br>

        <table class="table table-hover">
          <thead>
            <tr>
              <th scope="col" class="thId">#</th>
              <th scope="col" class="thCategoria">Categoria</th>
              <th scope="col" class="thCategoria">Editar</th>
              <th scope="col" class="thCategoria">Eliminar</th>
            </tr>
          </thead>
          <tbody>

            <% for(let r=0; r<listadoCategorias.length; ++ r){%>
              <tr>

                <td class="tdPrecioDescuento"><%= listadoCategorias[r].id %></td>
                <td class="tdPrecioDescuento"><%= listadoCategorias[r].categoria %></td>
                <td class="tdPrecioDescuento"><button type="button" class="btn btn-primary"><a  href="/admin/categorias/editar/<%= listadoCategorias[r].id %>" class="linkEditar">Editar</a></button></td>
                <td class="tdPrecioDescuento"><button type="button" class="btn btn-danger"><a href="/admin/categorias/eliminar/<%= listadoCategorias[r].id %>" class="linkEditar">Eliminar</a></button></td>              
              </tr>
              
            <% } %>


          </tbody>
        </table>


      </div>

    </div>


</body>


