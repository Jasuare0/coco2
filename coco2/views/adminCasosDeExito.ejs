<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- <title>E-mprender</title> -->
    
    <%- include('./partials/title') %>


    
    <!-- ESTILOS BOOSTRAP -->

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">

    <!-- ESTILOS PERSONALES -->

    <link rel='stylesheet' href='/stylesheets/index.css' />
    <link rel='stylesheet' href='/stylesheets/navbar.css' />

    <link rel='stylesheet' href='/stylesheets/adminCasosDeExito.css' />
    <link rel='stylesheet' href='/stylesheets/navBarInferior.css' />

</head>
<body>
    

    <!-- INICIO BARRA DE NAVEGACIÓN -->

    <%- include('./partials/navbar') %>

    <!-- FIN BARRA DE NAVEGACIÓN -->


    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/" class="linksNavInferior">Inicio</a></li>
        <li class="breadcrumb-item"><a href="/admin" class="linksNavInferior">Admin</a></li>
        <li class="breadcrumb-item active" aria-current="page">Casos de Éxito</li>
      </ol>
    </nav>


    <div class="external-container-section contenedortabla">

      <div class="internal-container-section">

        <button type="button" class="btn btn-primary"><a href="/admin/casosdeexito/agregar" class="linkEditar"> + Agregar Caso de Éxito</a></button>
        <br>

        <table class="table table-hover">
          <thead>
            <tr>
              <th scope="col" class="thId">#</th>
              <th scope="col" class="thTitulo">Título</th>
              <th scope="col" class="thImagen">Imagen</th>
              <th scope="col" class="thDescripcion">Descripcion</th>
              <th scope="col" class="thEditar">Editar</th>
              <th scope="col" class="thEliminar">Eliminar</th>

            </tr>
          </thead>
          <tbody>

            <% for(let i=0; i<casosdeexito.length; i++){ %>
              <tr>
                <th scope="row"><%= casosdeexito[i].id %></th>
                <td class="tdTitulo"><%= casosdeexito[i].titulo %></td>
                <% if(casosdeexito[i].imagenesCasosDeExito != '') {%>
                  <td><img src="/images/casosdeexito/<%= casosdeexito[i].imagenesCasosDeExito[0].imagen %>" alt="" class="imagenCasoExito"></td>

                <% }else{ %>
                  <td><img src="" alt="" class="imagenCasoExito"></td>

                <% } %>

                <td><%= casosdeexito[i].descripcion %></td>
                <td>
                  <button type="button" class="btn btn-primary"><a href="/admin/casosdeexito/editar/<%= casosdeexito[i].id %>" class="linkEditar"> Editar</a></button>
                </td>
                <td>
                  <button type="button" class="btn btn-danger"><a href="/admin/casosdeexito/eliminar/<%= casosdeexito[i].id %>" class="linkEditar"> Eliminar</a></button>
                </td>
              </tr>
  
            <% } %>

          </tbody>
        </table>

      </div>

    </div>





  <div class="external-container-section contenedormobile">

    <div class="internal-container-section">
      
      <% for(let i=0; i<casosdeexito.length; i++){ %>
        <div class="containerCasosExito">
          <h3 class="tituloCasoMobile"><%= casosdeexito[i].titulo %></h3>
          <% if(casosdeexito[i].imagenesCasosDeExito != '') {%>
            <img src="/images/casosdeexito/<%= casosdeexito[i].imagenesCasosDeExito[0].imagen %>" alt="" class="imagenCasoExito">

          <% }else{ %>
            <img src="" alt="" class="imagenCasoExito">

          <% } %>
          <p><%= casosdeexito[i].descripcion %></p>
          <button type="button" class="btn btn-primary"><a href="/admin/casosdeexito/editar/<%= casosdeexito[i].id %>" class="linkEditar"> Editar</a></button>
          <button type="button" class="btn btn-danger"><a href="/admin/casosdeexito/eliminar/<%= casosdeexito[i].id %>" class="linkEditar"> Eliminar</a></button>
  
        </div>
    
      <% } %>
      

    </div>
  </div>

</body>


  <!-- ESTILOS BOOSTRAP -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>

  <!-- iconos gratuitos -->
  <script src="https://kit.fontawesome.com/a0c0bb4f74.js" crossorigin="anonymous"></script>

</html>